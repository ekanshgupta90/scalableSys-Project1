<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>egupta Project-1</title>
    <!-- using bootstrap CDN for css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-home"></span>&nbsp;&nbsp;Welcome <%= username %>!
    <span style="padding-left:20%;"></span><a href="/"><span class="fa fa-sign-out"></span></a>
    </h1>
	<% if (message.length > 0 ) { %>
		<% if (status == 's' ) { %>
			<div class="alert alert-success"><%= message %></div>
		<% } else { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>
	
	<% } %>
    <!-- LOGIN FORM -->
    <form action="/answer" method="post">
        <% if (question1 > 0) { %>
        	<div class="form-group">
	            <label>What is 2+2?</label>
	            <% if (question1 === 4) { %>
	            <div class="alert alert-success"><%= question1 %> &nbsp; (Correct!)</div>
	            <% } else { %>
	            <div class="alert alert-danger"><%= question1 %> &nbsp; (Wrong!)</div>
	            <% } %>
       		 </div>
       		 <div class="form-group">
	            <label>What is 3*4?</label>
	             <% if (question2 === 12) { %>
	            <div class="alert alert-success"><%= question2 %> &nbsp; (Correct!)</div>
	            <% } else { %>
	            <div class="alert alert-danger"><%= question2 %> &nbsp; (Wrong!)</div>
	            <% } %>
       		 </div>
       		 <div class="form-group">
	            <label>What is 2/2?</label>
	             <% if (question3 === 1) { %>
	            <div class="alert alert-success"><%= question3 %> &nbsp; (Correct!)</div>
	            <% } else { %>
	            <div class="alert alert-danger"><%= question3 %> &nbsp; (Wrong!)</div>
	            <% } %>
        	</div>
        <% } else { %>
	        <div class="form-group">
	            <label>What is 2+2?</label>
	            <input type="text" class="form-control" name="question1">
	        </div>
	        <div class="form-group">
	            <label>What is 3*4?</label>
	            <input type="text" class="form-control" name="question2">
	        </div>
	        <div class="form-group">
	            <label>What is 2/2?</label>
	            <input type="text" class="form-control" name="question3">
	        </div>
			<input type="hidden" name="username" value="<%= username %>">
        	<button type="submit" class="btn btn-warning btn-lg">Submit</button>
        <% } %>
    </form>

    <hr>

</div>

</div>
</body>
</html>
